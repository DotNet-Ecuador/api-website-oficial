{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "DotNetEcuador.API": "Information",
      "System": "Warning"
    },
    "Console": {
      "IncludeScopes": false,
      "TimestampFormat": "yyyy-MM-dd HH:mm:ss "
    },
    "File": {
      "Path": "/opt/dotnet-ecuador-api/logs/app-.log",
      "RollingInterval": "Day",
      "RetainedFileCountLimit": 7,
      "FileSizeLimitBytes": 10485760
    }
  },
  "AllowedHosts": "*",
  "Urls": "http://localhost:5000",
  "JwtSettings": {
    "Note": "JWT configuration is managed through environment variables for security",
    "RequiredEnvironmentVariables": [
      "JWT_SECRET_KEY",
      "JWT_ISSUER", 
      "JWT_AUDIENCE",
      "JWT_ACCESS_TOKEN_EXPIRATION",
      "JWT_REFRESH_TOKEN_EXPIRATION"
    ]
  },
  "HealthChecks": {
    "UI": {
      "Enabled": false
    }
  }
}