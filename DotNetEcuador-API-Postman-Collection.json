							"mode": "raw",
							"raw": "{\n  \"name\": \"MentorshipProgram\",\n  \"description\": \"Programa de mentoría para nuevos desarrolladores\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/area-interest",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "area-interest"]
						},
						"description": "Crea una nueva área de interés para voluntariado"
					},
					"response": []
				}
			],
			"description": "Gestión de áreas de interés para voluntarios"
		},
		{
			"name": "Volunteer Applications",
			"item": [
				{
					"name": "Submit Volunteer Application",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"fullName\": \"Juan Pérez González\",\n  \"email\": \"juan@ejemplo.com\",\n  \"phoneNumber\": \"+593987654321\",\n  \"city\": \"Quito\",\n  \"hasVolunteeringExperience\": true,\n  \"areasOfInterest\": [\n    \"EventOrganization\",\n    \"TechnicalSupport\"\n  ],\n  \"otherAreas\": \"\",\n  \"availableTime\": \"Fines de semana y noches entre semana\",\n  \"skillsOrKnowledge\": \"Programación en C#, .NET, Azure\",\n  \"whyVolunteer\": \"Quiero contribuir al crecimiento de la comunidad .NET\",\n  \"additionalComments\": \"Disponible para eventos presenciales en Quito\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/volunteer-application/apply",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "volunteer-application", "apply"]
